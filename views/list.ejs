<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>User List</title>
</head>
<body>
<h1>User List</h1>
    <% data.forEach((user) => { %>
      <table border="1" width="300">
        <th>firstname:</th>
        <th>lastname:</th>
        <th>email:</th>
        <!-- <th>registert date:</th> -->
        <tr>
          <td><%- user.firstname %></td>
          <td><%- user.lastname %></td>
          <td><%- user.email %></td>
          <!-- <td><%- user.reg_date %></td>       -->
          <td>
            <a href="/<%= user.guest_id%>/update/">update</a>
          </td>
          <td>
            <form action="/<%= user.guest_id%>?_method=DELETE" method="POST">
              <input type="submit" value="DELETE">  
            </form>
          </td>          
        </tr>      
      </table>
    <% }) %>
    <a href="/">Home</a>
</body>
</html>